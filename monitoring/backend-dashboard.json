{
  "id": null,
  "uid": null,
  "title": "iPharma Backend Metrics",
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "5s",
  "panels": [
    {
      "type": "graph",
      "title": "HTTP Requests Total",
      "targets": [
        {
          "expr": "sum(rate(http_requests_total[1m])) by (method, status_code)",
          "legendFormat": "{{method}} - {{status_code}}",
          "interval": ""
        }
      ],
      "datasource": "Prometheus",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 }
    },
    {
      "type": "graph",
      "title": "Request Rate (per 5s)",
      "targets": [
        {
          "expr": "rate(http_requests_total[5s])",
          "legendFormat": "{{method}}",
          "interval": ""
        }
      ],
      "datasource": "Prometheus",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 }
    }
  ]
}
